
<section class="section">
	<div class="container">
		<nav class="level">
		  <div class="level-left">

		  </div>
		  <% if user_signed_in? %> 
			    <% if current_user.type_user == 'admin' %>			      
				  <div class="level-right">
				  	<p class="level-item">
				  		<%= link_to "Edit", edit_post_path(@post), class:"button" %>
				  	</p>
				  	<p class="level-item">
						<%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, class:"button is-danger" %>
						</p>
				  </div>
			    <% end %>
		  <% end %>
		</nav>
		<hr/>

		<div class="title">
			<%= @post.title %>
		</div>
		<div class="content">
			<%= @post.content %>
		</div>
	</div>
</section>

<section class="section comments">
	<div class="container">
		<div class="comment-count">
			<span class="tag is-rounded"><%= @post.comments.count %> Comments</span>
		</div>
		<!-- <h2 class="subtitle is-5"><strong><%= @post.comments.count %></strong> Comments</h2> -->
		<br/>
		<%= render @post.comments %> 
		<% if user_signed_in? %>  
			<div class="comment-form">
				<hr />
				<h3 class="subtitle is-3">Leave a reply </h3>
		 		<%= render 'comments/form' %>
			</div>
		<% end %>
	</div>
</section>